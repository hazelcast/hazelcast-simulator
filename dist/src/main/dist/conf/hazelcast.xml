<hazelcast xsi:schemaLocation="http://www.hazelcast.com/schema/config
                               http://www.hazelcast.com/schema/config/hazelcast-config-3.2.xsd"
           xmlns="http://www.hazelcast.com/schema/config"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <group>
        <name>workers</name>
    </group>

    <network>
        <port port-count="200" auto-increment="true">5701</port>
        <join>
            <multicast enabled="false"/>
            <tcp-ip enabled="true">
                <!--MEMBERS-->
            </tcp-ip>
        </join>
    </network>

    <partition-group enabled="true" group-type="HOST_AWARE">
    </partition-group>

    <map name="MapStore*">
        <map-store enabled="true">
            <class-name>com.hazelcast.stabilizer.tests.map.helpers.MapStoreWithCounter</class-name>
            <write-delay-seconds>5</write-delay-seconds>
        </map-store>
    </map>

    <map name="MaxSizeMap*">
        <eviction-policy>LRU</eviction-policy>
        <max-size policy="PER_NODE">1000</max-size>
        <eviction-percentage>25</eviction-percentage>
        <min-eviction-check-millis>0</min-eviction-check-millis>
    </map>

    <map name="NoBackup*">
        <backup-count>0</backup-count>
        <async-backup-count>0</async-backup-count>
        <statistics-enabled>false</statistics-enabled>
    </map>

    <map name="ObjectMap*">
        <in-memory-format>OBJECT</in-memory-format>
    </map>

    <serialization>
        <portable-version>1</portable-version>
        <data-serializable-factories>
            <data-serializable-factory factory-id="3000">
                com.hazelcast.stabilizer.tests.map.PredicatesTest$EmployeeDataSerializableFactory
            </data-serializable-factory>
            <data-serializable-factory factory-id="2000">
                com.hazelcast.stabilizer.tests.synthetic.SyntheticSerializableFactory
            </data-serializable-factory>
        </data-serializable-factories>
        <portable-factories>
            <portable-factory factory-id="10000000">
                com.hazelcast.stabilizer.tests.synthetic.SyntheticRequestPortableFactory
            </portable-factory>
            <portable-factory factory-id="300000">
                com.hazelcast.stabilizer.tests.map.PredicatesTest$PortableEmployeeFactory
            </portable-factory>
        </portable-factories>
    </serialization>

    <cache name="maxCachSmall*">
        <eviction max-size-policy="ENTRY_COUNT" size="271" eviction-policy="LFU"/>
    </cache>

    <cache name="maxCachMedium*">
        <eviction max-size-policy="ENTRY_COUNT" size="1000" eviction-policy="LFU"/>
    </cache>

    <cache name="maxCachLarge*">
        <eviction max-size-policy="ENTRY_COUNT" size="10000" eviction-policy="LFU"/>
    </cache>

</hazelcast>